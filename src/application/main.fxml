<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="345.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
    <children>
        <VBox spacing="10" alignment="CENTER" layoutX="0" layoutY="20" prefWidth="300">
        <StackPane alignment="CENTER" prefWidth="200" prefHeight="26">
            
                <Rectangle fx:id="numDisplay" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="26.0" width="200.0" />
                <Text fx:id="displayText" />
                </StackPane>
            
            <HBox spacing="10" alignment="CENTER">
                <VBox spacing="10" alignment="CENTER">
                <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btnCharge" mnemonicParsing="false"  text="-/+" styleClass="darkBackground" />
                        <Button fx:id="btnSqr" mnemonicParsing="false"  text="sqr" styleClass="darkBackground" />
                        <Button fx:id="btnSqrRt" mnemonicParsing="false"  text="^2" styleClass="darkBackground" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btn1" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="1" />
                        <Button fx:id="btn2" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="2" />
                        <Button fx:id="btn3" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="3" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btn4" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="4" />
                        <Button fx:id="btn5" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="5" />
                        <Button fx:id="btn6" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="6" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="btn7" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="7" />
                        <Button fx:id="btn8" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="8" />
                        <Button fx:id="btn9" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="9" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnDot" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="." />
                        <Button fx:id="btn0" mnemonicParsing="false" onAction="#handleNumberButtonClick" text="0" />
                         <Button fx:id="btnEquals" mnemonicParsing="false" onAction="#handleEqualsClick" text="=" />
                    </HBox>
                </VBox>
                <VBox spacing="10" alignment="CENTER">
                    <Button fx:id="btnPlus" mnemonicParsing="false" onAction="#handleOperationButtonClick" text="+" styleClass="darkBackground" />
                    <Button fx:id="btnMinus" mnemonicParsing="false" onAction="#handleOperationButtonClick" text="-" styleClass="darkBackground" />
                    <Button fx:id="btnMultiply" mnemonicParsing="false" onAction="#handleOperationButtonClick" text="*" styleClass="darkBackground" />
                    <Button fx:id="btnDivide" mnemonicParsing="false" onAction="#handleOperationButtonClick" text="/" styleClass="darkBackground" />
                    <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClearClick" text="C" styleClass="darkBackground" />
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
